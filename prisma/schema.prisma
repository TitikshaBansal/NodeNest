// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  clerkId   String    @unique
  email     String
  name      String?
  imageUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  workflows Workflow[]

  @@index([clerkId])
  @@map("users")
}

model Workflow {
  id        String   @id @default(cuid())
  userId    String
  name      String   @default("Untitled Workflow")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  nodes     Node[]
  edges     Edge[]
  runs      WorkflowRun[]

  @@index([userId, updatedAt(sort: Desc)])
  @@map("workflows")
}

model Node {
  id          String   @id @default(cuid())
  workflowId  String
  type        String   // "text" | "image" | "llm" | "crop" | "extractFrame"
  positionX   Float
  positionY   Float
  data        Json     // Node-specific data (label, content, model, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workflow    Workflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  sourceEdges Edge[]       @relation("SourceNode")
  targetEdges Edge[]       @relation("TargetNode")
  runs        NodeRun[]

  @@index([workflowId])
  @@map("nodes")
}

model Edge {
  id            String   @id @default(cuid())
  workflowId    String
  sourceNodeId  String
  targetNodeId  String
  sourceHandle  String?
  targetHandle  String?
  createdAt     DateTime @default(now())

  workflow      Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  sourceNode    Node     @relation("SourceNode", fields: [sourceNodeId], references: [id], onDelete: Cascade)
  targetNode    Node     @relation("TargetNode", fields: [targetNodeId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@index([sourceNodeId])
  @@index([targetNodeId])
  @@map("edges")
}

model WorkflowRun {
  id          String    @id @default(cuid())
  workflowId  String
  status      String    // "pending" | "running" | "completed" | "failed"
  startedAt   DateTime?
  completedAt DateTime?
  error       String?
  createdAt   DateTime  @default(now())

  workflow    Workflow  @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  nodeRuns    NodeRun[]

  @@index([workflowId, createdAt(sort: Desc)])
  @@map("workflow_runs")
}

model NodeRun {
  id            String      @id @default(cuid())
  workflowRunId String
  nodeId        String
  status        String      // "pending" | "running" | "completed" | "failed"
  inputs        Json?       // Input data received
  outputs       Json?       // Output data produced
  error         String?
  duration      Int?        // Duration in milliseconds
  startedAt     DateTime?
  completedAt   DateTime?
  triggerTaskId String?     // Trigger.dev task ID
  createdAt     DateTime    @default(now())

  workflowRun   WorkflowRun @relation(fields: [workflowRunId], references: [id], onDelete: Cascade)
  node          Node        @relation(fields: [nodeId], references: [id], onDelete: Cascade)

  @@index([workflowRunId])
  @@index([nodeId])
  @@index([status])
  @@map("node_runs")
}

